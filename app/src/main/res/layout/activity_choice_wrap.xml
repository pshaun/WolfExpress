<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kusha.finalproject.ChoiceWrap">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/ChoiceOfWrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Wrap"
            android:textAlignment="center"
            android:textSize="40dp"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/Spinach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spinach"
            android:layout_below="@id/ChoiceOfWrap"
            />
        <Button
            android:id="@+id/Tomato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomato"
            android:layout_below="@id/Spinach"/>

        <Button
            android:id="@+id/Wheat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wheat"

            android:layout_below="@id/Tomato"/>
        <Button
            android:id="@+id/Plain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plain"

            android:layout_below="@id/Wheat"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
