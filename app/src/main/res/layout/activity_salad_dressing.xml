<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kusha.finalproject.SaladDressing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/SaladDressing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Dressing"
            android:textAlignment="center"
            android:textSize="40dp"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/BalsamicVinaigrette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balsamic Vinaigrette"
            android:layout_below="@id/SaladDressing"
            />
        <Button
            android:id="@+id/Caesar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="caesar"
            android:layout_below="@id/BalsamicVinaigrette"
            />
        <Button
            android:id="@+id/BleuCheese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bleu Cheese"
            android:layout_below="@id/Caesar"
            />
        <Button
            android:id="@+id/HM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Honey Mustard"
            android:layout_below="@id/BleuCheese"
            />
        <Button
            android:id="@+id/LoCalItalian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lo-Cal Italian"
            android:layout_below="@id/HM"
            />
        <Button
            android:id="@+id/CM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chipotle Mayo"
            android:layout_below="@id/LoCalItalian"
            />
        <Button
            android:id="@+id/Ranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ranch"
            android:layout_below="@id/CM"
            />
        <Button
            android:id="@+id/ThousandIsland"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thousand Island"
            android:layout_below="@id/Ranch"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
