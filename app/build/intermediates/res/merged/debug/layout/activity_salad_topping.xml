<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kusha.finalproject.SaladTopping">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/SaladTopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Topping"
            android:textAlignment="center"
            android:textSize="40dp"
            android:background="#ffffff"/>
            <Button
                android:id="@+id/Becon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bacon"
                android:layout_below="@id/SaladTopping"
                />
            <Button
                android:id="@+id/BlackBeans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Black Beans"
                android:layout_below="@id/Becon"
                />
            <Button
                android:id="@+id/Broccoli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broccoli"
                android:layout_below="@id/BlackBeans"
                />
            <Button
                android:id="@+id/Cauliflower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cauliflower"
                android:layout_below="@id/Broccoli"
                />
            <Button
                android:id="@+id/Celery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celery"
                android:layout_below="@id/Cauliflower"
                />
            <Button
                android:id="@+id/Craisins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Craisins"
                android:layout_below="@id/Celery"
                />
            <Button
                android:id="@+id/Cucumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cucumbers"
                android:layout_below="@id/Craisins"
                />
            <Button
                android:id="@+id/Tomatoes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tomatoes"
                android:layout_below="@id/Cucumbers"
                />
            <Button
                android:id="@+id/FetaCheese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feta Cheese"
                android:layout_below="@id/Tomatoes2"
                />
            <Button
                android:id="@+id/GarbanzoBeans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garbanzo Beans"
                android:layout_below="@id/FetaCheese"
                />
            <Button
                android:id="@+id/GRPM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Green and Red Pepper Medley"
                android:layout_below="@id/GarbanzoBeans"
                />
            <Button
                android:id="@+id/Mushrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mushrooms"
                android:layout_below="@id/GRPM"
                />
            <Button
                android:id="@+id/ParmesanCheese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parmesan Cheese"
                android:layout_below="@id/Mushrooms"
                />
            <Button
                android:id="@+id/Provolone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provolone"
                android:layout_below="@id/ParmesanCheese"
                />
            <Button
                android:id="@+id/SwissCheese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swiss Cheese"
                android:layout_below="@id/Provolone2"
                />
            <Button
                android:id="@+id/RedOnions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red Onions"
                android:layout_below="@id/SwissCheese"
                />
            <Button
                android:id="@+id/ShreddedCarrots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shredded Carrots"
                android:layout_below="@id/RedOnions"
                />

    </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
